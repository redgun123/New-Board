<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.lja.mapper.BoardMapper">

	<select id="getList" resultType="me.lja.model.BoardVO">
		select * from board_tbl 
		<where>
			<trim prefixOverrides="or">
				<foreach collection="typeCollection" item="tp">
					<trim prefix="or">
						<choose>
							<when test="tp=='T'.toString()">
								title like concat('%',#{keyword},'%')
							</when>
							<when test="tp=='C'.toString()">
								content like concat('%',#{keyword},'%')
							</when>
							<when test="tp=='W'.toString()">
								writer like concat('%',#{keyword},'%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</where>
		limit #{startPage},#{perPageNum}	
	</select>
	
	<select id="get" resultType="me.lja.model.BoardVO">
		select * from board_tbl where bno = #{bno}
	</select>
	
	<insert id="insert">
		<selectKey keyProperty="bno" resultType="java.lang.Long" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into board_tbl(title,content,writer)
		values(#{title},#{content},#{writer})
	</insert>
	
	<update id="update">
		update board_tbl set
		title = #{title},
		content = #{content},
		updateDate = now()
		where bno = #{bno}
	</update>
	
	<delete id="delete">
		delete from board_tbl where bno = #{bno}
	</delete>
	
	<select id="totalCount" resultType="java.lang.Integer">
		select count(bno) from board_tbl
	</select>
	
</mapper>